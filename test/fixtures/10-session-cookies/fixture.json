{
  "title": "Should retrieve cookies from the server response",
  "actions": [
    {
      "action": "goto",
      "args": ["/"]
    }
  ],
  "server": {
    "responseHeaders": {
      "Set-Cookie": "test-cookie=test-value; Path=/; HttpOnly"
    }
  },
  "expected": {
    "statusCode": 200,
    "cookies": {
        "and": [
          {
            "contains": "test-cookie"
          },
          {
            "contains": "test-value"
          }
        ]
    }
  }
}
